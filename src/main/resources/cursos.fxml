<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="application.controllers.CursosController">

    <top>
        <Label text="Gerenciar Cursos" style="-fx-font-size: 22px;" BorderPane.alignment="CENTER">
            <padding><Insets top="20" bottom="20"/></padding>
        </Label>
    </top>

    <center>
        <VBox spacing="10" alignment="CENTER">

            <TableView fx:id="tabelaCursos" prefWidth="650" prefHeight="250">
                <columns>
                    <TableColumn fx:id="colunaTitulo" text="Título" prefWidth="150"/>
                    <TableColumn fx:id="colunaDescricao" text="Descrição" prefWidth="200"/>
                    <TableColumn fx:id="colunaCarga" text="Carga Horária" prefWidth="100"/>
                    <TableColumn fx:id="colunaCategoria" text="Categoria" prefWidth="100"/>
                    <TableColumn fx:id="colunaProfessor" text="Professor" prefWidth="100"/>
                </columns>
            </TableView>

            <GridPane hgap="10" vgap="10">
                <padding><Insets top="20"/></padding>

                <Label text="Título:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="campoTitulo" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Descrição:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="campoDescricao" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Carga Horária:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <TextField fx:id="campoCargaHoraria" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Label text="Categoria:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <TextField fx:id="campoCategoria" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label text="Professor:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <ComboBox fx:id="comboProfessor" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
            </GridPane>

            <Button text="Cadastrar Curso" onAction="#cadastrarCurso" prefWidth="200"/>

        </VBox>
    </center>

</BorderPane>
